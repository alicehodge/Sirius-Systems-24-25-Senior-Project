@page
@model StorkDorkMain.Areas.Identity.Pages.Account.Manage.ChangeDisplayNameModel
@{
    ViewData["Title"] = "Change Display Name";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="Input.NewDisplayName" class="form-label">New Display Name</label>
                <input asp-for="Input.NewDisplayName" class="form-control" maxlength="25" />
                <span asp-validation-for="Input.NewDisplayName" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
