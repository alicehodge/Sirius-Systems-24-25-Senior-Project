@model StorkDorkMain.Models.RangeSubmissionViewModel

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-controller="Bird" asp-action="SubmitRange" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="BirdId" />
    
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="RangeDescription" class="form-label">Range Description</label>
        <textarea asp-for="RangeDescription" class="form-control input-style" rows="4" minlength="5"
                  placeholder="Describe the bird's geographic range..."></textarea>
        <span asp-validation-for="RangeDescription" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="SubmissionNotes" class="form-label">Additional Notes (Optional)</label>
        <textarea asp-for="SubmissionNotes" class="form-control input-style" rows="2"
                  placeholder="Optional: Add any additional information or sources..."></textarea>
        <span asp-validation-for="SubmissionNotes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn storkdork-button">
        <i class="bi bi-check-circle me-2"></i> Submit Range Information
    </button>
    <button type="button" class="btn btn-secondary" data-bs-toggle="collapse" 
            data-bs-target="#rangeSubmissionForm">Cancel</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            $('form').validate();
        });
    </script>
}