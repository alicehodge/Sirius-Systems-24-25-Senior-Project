@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-4 container text-center mb-5">Welcome to Stork Dork</h1>

<h3 class="mt-4 container text-center mb-5 fs-5">
    Discover birds. Explore Hotspots. Connect with your fellow Chickadees.
</h3>

<!-- Search For Birds -->
<div class="home-search-bar container my-4 d-flex justify-content-center" style="max-width: 600px;">
    <form id="homepageSearchForm" onsubmit="return redirectToSearchPage(event)" class="d-flex w-100">
        <div class="input-group rounded-pill shadow-sm w-100">
            <input 
                type="text" 
                id="homepageSearchInput" 
                class="form-control rounded-pill pe-5" 
                placeholder="Enter bird name..." 
            />
            <button 
                id="clearSearch" 
                class="btn btn-link text-muted position-absolute" 
                style="right: 60px; top: 50%; transform: translateY(-50%); display: none; z-index: 100;"
                type="button"
            >
                <i class="bi bi-x-circle"></i>
            </button>
            <span class="input-group-text bg-transparent border-0 position-relative" style="right: 10px;">
                <i class="bi bi-search"></i>
            </span>
        </div>
    </form>
</div>


<hr class="container my-4" />

<!-- Feature Sections -->
<section class="container mb-5">
    <div class="row g-4">
        <div class="col-md-4">
            <a href="Search/Index" class="text-decoration-none text-dark">
                <div class="card h-100">
                    <div class="placeholder-img">Explore Birds</div>
                    <div class="card-body">
                        <p class="card-text">Search for birds by name or family to learn more about them</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a href="Leaflet/Map" class="text-decoration-none text-dark">
                <div class="card h-100">
                    <div class="placeholder-img">Hotspots</div>
                    <div class="card-body">
                        <p class="card-text">Find popular birdwatching locations and explore migration patterns</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <!-- Placeholder for under-construction feature -->
            <div class="card h-100">
                <div class="placeholder-img">Community</div>
                <div class="card-body">
                    <p class="card-text">Join a vibrant community of bird enthusiasts and share your findings</p>
                </div>
            </div>
        </div>
    </div>
</section>

<hr class="container my-4" />

<section class="container mb-5">
    <div class="card bg-light" style="height: 200px;">
        <div class="card-body d-flex align-items-center" style="padding-left: 2rem;">
            <div>

                <h3 class="card-title mb-3">New to birding?</h3>
                <a href="BirdingTips/Index" 
                <p class="card-text">
                    Welcome to the wonderful world of birdwatching!<br />
                    Get started with our beginner-friendly tips, guides, and resources<br />
                    designed to help you identify birds and enjoy your birding journey.
                </p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        function redirectToSearchPage(event) {
            event.preventDefault();
            const searchTerm = document.getElementById("homepageSearchInput").value.trim();
            if (searchTerm) {
                const encodedTerm = encodeURIComponent(searchTerm);
                window.location.href = `/search/birds?searchTerm=${encodedTerm}&searchType=name`;
            } else {
                alert("Please enter a bird name.");
            }
            return false;
        }
    </script>
}

<style>
    .placeholder-img {
        width: 100%;
        height: 200px;
        background-color: #e0e0e0;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: #888;
    }
</style>
